#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

mktmpdir() {
  dir=$(mktemp -t R-$1-XXXX)
  rm -rf $dir
  mkdir -p $dir
  echo $dir
}

function indent() {
  c='s/^/       /'
  case $(uname) in
    Darwin) sed -l "$c";;
    *)      sed -u "$c";;
  esac
}

install_r_package() {
  package_url="$1"
  $BUILD_DIR/bin/R CMD INSTALL $package_url 2>&1 | indent

  if [ "${PIPESTATUS[*]}" != "0 0" ]; then
    echo " !     Failed to install $package_url package"
    exit 1
  fi
}

# clean up leaking environment
unset GIT_DIR

# config
R_VERSION="2.15.1"
S3_BUCKET="heroku-buildpack-r"

# parse and derive params
BUILD_DIR=$1
CACHE_DIR=$2

LP_DIR=`cd $(dirname $0); cd ..; pwd`

# echo "BUILD_DIR => $BUILD_DIR"
# echo "CACHE_DIR => $CACHE_DIR"
# echo "LP_DIR => $LP_DIR"

# R binaries on s3
R_BINARIES="http://${S3_BUCKET}.s3.amazonaws.com/R-${R_VERSION}-binaries.tgz"

R_HOME="$BUILD_DIR/vendor/R"

# download and unpack binaries
echo "Fetching R binaries" | indent
mkdir -p $R_HOME && curl $R_BINARIES -s -o -  | tar xzf - -C $R_HOME

echo ""
ls -alh $R_HOME | indent
echo ""

# vendor R into the slug
echo "Vendoring R $R_VERSION" | indent

mkdir -p "$BUILD_DIR/bin"
cp "$R_HOME/bin/R" "$BUILD_DIR/bin/R"


# TODO

# # install dependencies from CRAN
# echo "-----> Installing dependencies from CRAN"

# cd $BUILD_DIR

#   # TODO: read the r_packages file and install each one

#   echo "...TODO..." | indent
#   echo "...TODO..." | indent
#   echo "...TODO..." | indent
#   echo "...TODO..." | indent

#   #
#   # e.g. to install the "neldermead" package:
#   #  install_r_package('http://cran.r-project.org/src/contrib/neldermead_1.0-7.tar.gz')
#   #

# echo "Dependencies installed" | indent


echo "Dependencies installed" | indent
